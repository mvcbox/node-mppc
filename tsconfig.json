{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es5", "es6"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "allowJs": false,
    "sourceMap": false,
    "declaration": true,
    "skipLibCheck": true,
    "removeComments": true,
    "inlineSources": false,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "typeRoots": ["types", "node_modules/@types"]
  }
}
